<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBranco</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="android:navigationBarColor">@color/colorBrancoGelo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="ToolbarClaro" parent="Theme.AppCompat.NoActionBar">
    </style>

    <!-- tema da caixa de pesquisa backdrop frontal -->
    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">10000dp</item>
        <item name="android:textColorHint">@color/colorCinza2</item>
        <item name="android:listChoiceBackgroundIndicator">@android:color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- dialog com bordas redondas -->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:background">@drawable/fundo_redondo_branco</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- bottom sheet com topo redondo -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/fundo_redondo_branco_top</item>
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <!-- Cores de dialog de escolhas de cores -->
    <style name="ColorPickerDialog.Dark" parent="Theme.AppCompat.Dialog">
        <item name="redColor">#FF5252</item>
        <item name="greenColor">#FF5252</item>
        <item name="blueColor">#536DFE</item>
        <item name="neutralColor">#FFFFFF</item>
    </style>

    <!-- configuracoes do dialog da camera -->
    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>